{
	"compilerOptions": {
		"target": "es2024",
		"module": "esnext",
		"moduleResolution": "bundler",
		"outDir": "dist",
		"declaration": true,
		"declarationDir": "dist",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"strict": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"types": ["node"]
	},
	"include": ["src"]
}
